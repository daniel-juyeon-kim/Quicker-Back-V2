{
  "openapi": "3.0.3",
  "info": {
    "title": "Quicker Server API",
    "version": "1.0.0",
    "description": "Quicker 서버 Api 문서"
  },
  "tags": [
    {
      "name": "register",
      "description": "회원가입"
    },
    {
      "name": "user",
      "description": "사용자 관련"
    },
    {
      "name": "order",
      "description": "주문 관련"
    },
    {
      "name": "chat",
      "description": "채팅 관련"
    }
  ],
  "paths": {
    "/register": {
      "post": {
        "tags": ["register"],
        "summary": "사용자 회원 가입",
        "requestBody": {
          "description": "새로운 회원 가입",
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "User": {
                    "type": "object",
                    "properties": {
                      "wallet_address": {
                        "type": "string",
                        "description": "사용자 지갑주소"
                      },
                      "name": {
                        "type": "string",
                        "description": "사용자 이름"
                      },
                      "email": {
                        "type": "string",
                        "description": "사용자 이메일",
                        "format": "email"
                      },
                      "contact": {
                        "type": "string",
                        "description": "사용자 연락처"
                      }
                    }
                  },
                  "Birthday": {
                    "type": "object",
                    "properties": {
                      "year": {
                        "type": "integer",
                        "description": "태어난 연도",
                        "minimum": 1923,
                        "maximum": 2014
                      },
                      "month": {
                        "type": "integer",
                        "description": "월",
                        "minimum": 0,
                        "maximum": 11
                      },
                      "date": {
                        "type": "integer",
                        "description": "일",
                        "minimum": 0,
                        "maximum": 31
                      }
                    }
                  }
                }
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "요청 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number",
                      "example": 200
                    },
                    "msg": {
                      "type": "string",
                      "example": "done"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "요청 실패: 유효성 검사 실패",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response404"
                }
              }
            }
          }
        }
      }
    },
    "/user/name": {
      "get": {
        "tags": ["user"],
        "summary": "사용자 이름 가져오기",
        "parameters": [
          {
            "name": "walletAddress",
            "in": "query",
            "description": "사용자의 지갑주소",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "요청 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "실패 요청: 존재하지 않는 데이터",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response404"
                }
              }
            }
          }
        }
      }
    },
    "/user/image/id": {
      "get": {
        "tags": ["user"],
        "summary": "사용자 프로필 이미지 아이디 가져오기",
        "parameters": [
          {
            "name": "walletAddress",
            "in": "query",
            "description": "사용자의 지갑주소",
            "required": true,
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "정상 흐름",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "imageId": {
                      "type": "string",
                      "example": "100"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "요청 실패: 유효성 검사 실패",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response404"
                }
              }
            }
          }
        }
      }
    },
    "/user/image/id/": {
      "put": {
        "tags": ["user"],
        "summary": "사용자 프로필 이미지 아이디 업데이트",
        "description": "사용자 프로필 이미지 아이디 업데이트",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "walletAddress": {
                    "type": "string"
                  },
                  "imageId": {
                    "type": "string",
                    "description": "문자열타입 숫자여야 함",
                    "example": "100"
                  }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "정상 흐름",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "done"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "유효성 검사 실패",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response404"
                }
              }
            }
          }
        }
      }
    },
    "/order": {
      "get": {
        "tags": ["order"],
        "summary": "주문에 기록된 출발지와 도착지 조회",
        "parameters": [
          {
            "name": "orderid",
            "in": "query",
            "description": "주문 아이디",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "요청 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "id": {
                      "type": "integer",
                      "example": 1
                    },
                    "Destination": {
                      "type": "object",
                      "properties": {
                        "X": {
                          "type": "number",
                          "example": 37.12345
                        },
                        "Y": {
                          "type": "number",
                          "example": 127.12345
                        }
                      }
                    },
                    "Departure": {
                      "type": "object",
                      "properties": {
                        "X": {
                          "type": "number",
                          "example": 36.54321
                        },
                        "Y": {
                          "type": "number",
                          "example": 126.54321
                        }
                      },
                      "required": ["X", "Y"]
                    }
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["order"],
        "summary": "주문 생성",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "walletAddress": {
                    "type": "string",
                    "example": "0x123456789abcdef"
                  },
                  "Order": {
                    "type": "object",
                    "properties": {
                      "ID_REQ": {
                        "type": "string",
                        "example": "REQ123"
                      },
                      "DETAIL": {
                        "type": "string",
                        "nullable": true,
                        "example": "Order detail here"
                      }
                    },
                    "required": ["id", "ID_REQ"]
                  },
                  "Transportation": {
                    "type": "object",
                    "properties": {
                      "WALKING": {
                        "type": "number",
                        "example": 1
                      },
                      "BICYCLE": {
                        "type": "number",
                        "example": 0
                      },
                      "SCOOTER": {
                        "type": "number",
                        "example": 0
                      },
                      "BIKE": {
                        "type": "number",
                        "example": 0
                      },
                      "CAR": {
                        "type": "number",
                        "example": 0
                      },
                      "TRUCK": {
                        "type": "number",
                        "example": 0
                      }
                    },
                    "required": ["ID", "WALKING", "BICYCLE", "SCOOTER", "BIKE", "CAR", "TRUCK"]
                  },
                  "Destination": {
                    "type": "object",
                    "properties": {
                      "X": {
                        "type": "number",
                        "example": 37.12345
                      },
                      "Y": {
                        "type": "number",
                        "example": 127.12345
                      },
                      "DETAIL": {
                        "type": "string",
                        "example": "Destination detail here"
                      }
                    },
                    "required": ["id", "X", "Y", "DETAIL"]
                  },
                  "Departure": {
                    "type": "object",
                    "properties": {
                      "X": {
                        "type": "number",
                        "example": 36.54321
                      },
                      "Y": {
                        "type": "number",
                        "example": 126.54321
                      },
                      "DETAIL": {
                        "type": "string",
                        "example": "Departure detail here"
                      }
                    },
                    "required": ["ID", "X", "Y", "DETAIL"]
                  },
                  "Product": {
                    "type": "object",
                    "properties": {
                      "WIDTH": {
                        "type": "number",
                        "example": 50
                      },
                      "LENGTH": {
                        "type": "number",
                        "example": 100
                      },
                      "HEIGHT": {
                        "type": "number",
                        "example": 30
                      },
                      "WEIGHT": {
                        "type": "number",
                        "example": 10
                      }
                    },
                    "required": ["ID", "WIDTH", "LENGTH", "HEIGHT", "WEIGHT"]
                  },
                  "Sender": {
                    "type": "object",
                    "properties": {
                      "NAME": {
                        "type": "string",
                        "example": "John Doe"
                      },
                      "PHONE": {
                        "type": "string",
                        "example": "+1234567890"
                      }
                    },
                    "required": ["ID", "NAME", "PHONE"]
                  },
                  "Recipient": {
                    "type": "object",
                    "properties": {
                      "NAME": {
                        "type": "string",
                        "example": "Jane Smith"
                      },
                      "PHONE": {
                        "type": "string",
                        "example": "+0987654321"
                      }
                    },
                    "required": ["id", "NAME", "PHONE"]
                  }
                },
                "required": [
                  "userWalletAddress",
                  "Order",
                  "Transportation",
                  "Destination",
                  "Departure",
                  "Product",
                  "Sender",
                  "Recipient"
                ]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "요청 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string",
                      "example": "done"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "요청 실패: 유효성 검사 실패",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response404"
                }
              }
            }
          }
        }
      },
      "put": {
        "tags": ["order"],
        "summary": "배송원이 주문을 수락하고 주문 정보에 배송원 정보를 업데이트",
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "userWalletAddress": {
                    "type": "string",
                    "example": "0x123456789abcdef"
                  },
                  "orderId": {
                    "type": "integer",
                    "example": 1
                  }
                },
                "required": ["userWalletAddress", "orderId"]
              }
            }
          },
          "required": true
        },
        "responses": {
          "200": {
            "description": "요청 성공",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string",
                      "example": "done"
                    }
                  }
                }
              }
            }
          },
          "404": {
            "description": "요청 실패: 유효성 검사 실패",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response404"
                }
              }
            }
          }
        }
      }
    },
    "/order/image/fail": {
      "get": {
        "tags": ["order"],
        "summary": "배송이 실패한 사유와 이미지를 가지고 온다.",
        "parameters": [
          {
            "name": "orderNum",
            "in": "query",
            "description": "주문 아이디",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "정상 흐름",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "nullable": true,
                  "properties": {
                    "imageBuffer": {
                      "type": "string",
                      "format": "binary"
                    },
                    "reason": {
                      "type": "string",
                      "example": "Reason for providing the image"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "유효성 검사 실패",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response404"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["order"],
        "summary": "배송 실패 정보 생성",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  },
                  "reason": {
                    "type": "string",
                    "example": "Reason for file upload"
                  }
                },
                "required": ["file", "reason"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "정상 흐름",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string",
                      "example": "done"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "유효성 검사 실패",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response404"
                }
              }
            }
          }
        }
      }
    },
    "/order/image/complete": {
      "get": {
        "tags": ["order"],
        "summary": "배송 완료된 정보 가지고 오기",
        "parameters": [
          {
            "name": "orderNum",
            "in": "query",
            "description": "주문 아이디",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "정상 흐름",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "nullable": true,
                  "properties": {
                    "imageBuffer": {
                      "type": "string",
                      "format": "binary"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "유효성 검사 실패",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response404"
                }
              }
            }
          }
        }
      },
      "post": {
        "tags": ["order"],
        "summary": "배송 완료 정보 생성",
        "requestBody": {
          "content": {
            "multipart/form-data": {
              "schema": {
                "type": "object",
                "properties": {
                  "file": {
                    "type": "string",
                    "format": "binary"
                  },
                  "orderNum": {
                    "type": "integer",
                    "example": 12345
                  }
                },
                "required": ["file", "orderNum"]
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "정상 흐름",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "msg": {
                      "type": "string",
                      "example": "done"
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "유효성 검사 실패",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response404"
                }
              }
            }
          }
        }
      }
    },
    "/room": {
      "get": {
        "tags": ["chat"],
        "summary": "출발지, 발송인, 도착지, 수취인 정보 제공",
        "parameters": [
          {
            "name": "orderNum",
            "in": "query",
            "description": "주문 아이디",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "정상 흐름",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "code": {
                      "type": "number",
                      "example": 200
                    },
                    "message": {
                      "type": "string",
                      "example": "OK"
                    },
                    "body": {
                      "type": "object",
                      "properties": {
                        "id": {
                          "type": "integer",
                          "example": 1
                        },
                        "Sender": {
                          "type": "object",
                          "properties": {
                            "PHONE": {
                              "type": "string",
                              "example": "+1234567890"
                            },
                            "Departure": {
                              "type": "object",
                              "properties": {
                                "ID": {
                                  "type": "integer",
                                  "example": 101
                                },
                                "X": {
                                  "type": "number",
                                  "format": "float",
                                  "example": 123.45
                                },
                                "Y": {
                                  "type": "number",
                                  "format": "float",
                                  "example": 67.89
                                }
                              }
                            }
                          }
                        },
                        "Recipient": {
                          "type": "object",
                          "properties": {
                            "PHONE": {
                              "type": "string",
                              "example": "+0987654321"
                            },
                            "Destination": {
                              "type": "object",
                              "properties": {
                                "id": {
                                  "type": "integer",
                                  "example": 102
                                },
                                "X": {
                                  "type": "number",
                                  "format": "float",
                                  "example": 98.76
                                },
                                "Y": {
                                  "type": "number",
                                  "format": "float",
                                  "example": 54.32
                                }
                              }
                            }
                          }
                        }
                      }
                    }
                  }
                }
              }
            }
          },
          "400": {
            "description": "유효성 검사 실패",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/response404"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "response404": {
        "type": "object",
        "properties": {
          "error_message": {
            "type": "string"
          }
        }
      }
    }
  }
}
